{
	"$schema": "node_modules/turbo/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "out/**", "tsp-output/**", "src/generated/**"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"test": {},
		"test:integration": {
			"cache": false,
			"passThroughEnv": [
				"BACKLOG_SPACE",
				"BACKLOG_API_KEY",
				"BACKLOG_PROJECT",
				"BACKLOG_REPO",
				"BACKLOG_PR_BASE_BRANCH",
				"BACKLOG_PR_SOURCE_BRANCH"
			]
		},
		"type-check": {
			"dependsOn": ["^build", "^type-check"]
		}
	}
}
