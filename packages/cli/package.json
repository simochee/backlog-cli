{
	"name": "@simochee/backlog-cli",
	"version": "0.0.0",
	"description": "Backlog CLI â€” manage Backlog from the command line",
	"keywords": [
		"backlog",
		"cli",
		"nulab",
		"project-management"
	],
	"homepage": "https://backlog-cli.simochee.net",
	"bugs": {
		"url": "https://github.com/simochee/backlog-cli/issues"
	},
	"license": "MIT",
	"author": "simochee",
	"repository": {
		"type": "git",
		"url": "https://github.com/simochee/backlog-cli.git",
		"directory": "packages/cli"
	},
	"bin": {
		"backlog": "./bin/backlog.mjs"
	},
	"files": [
		"bin",
		"dist"
	],
	"type": "module",
	"imports": {
		"#*": "./src/*"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outfile ./dist/backlog.mjs --target=node --minify --conditions=bun",
		"build:compile": "bun build ./src/index.ts --compile --outfile ./out/$npm_package_name",
		"dev": "bun ./src/index.ts",
		"prepublishOnly": "bun run build",
		"test": "vitest run",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"ofetch": "^1.5.1",
		"ufo": "^1.6.3"
	},
	"devDependencies": {
		"@repo/api": "workspace:*",
		"@repo/config": "workspace:*",
		"@repo/openapi-client": "workspace:*",
		"@repo/test-utils": "workspace:*",
		"@repo/tsconfigs": "workspace:*",
		"citty": "^0.1.6",
		"consola": "^3.4.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
